extends ../layout

block content
    h1 Cadastrar categoria
    form(action="/categorias", method="POST")
        div.form-group
            label(for="nome") Nome da categoria
            input.form-control(type="text", id="nome", name="nome", required)
        button.btn.btn-primary(type="submit") Cadastrar